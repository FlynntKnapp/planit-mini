# =========================
# Core Django
# =========================
# Required in production (prod.py uses os.environ["SECRET_KEY"])
SECRET_KEY=django-insecure-change-me-please

# Optional: if you use this in manage scripts / WSGI/ASGI switching
ENVIRONMENT=development

# Optional: app-wide maintenance flag (not used in settings yet)
MAINTENANCE_MODE=off


# =========================
# Hosts / Deployment
# =========================
# Comma-separated list, only used in prod.py
# Example for Heroku: my-planit-mini.herokuapp.com
ALLOWED_HOSTS=my-planit-mini.herokuapp.com


# =========================
# Database (Production)
# =========================
# Used by get_database_config_variables(DATABASE_URL)
# Example for Heroku Postgres:
# postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://user:password@host:5432/dbname


# =========================
# Email / SMTP Settings
# (used in base.py; dev overrides backend to console)
# =========================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Optional: for tests/utilities in your codebase
TEST_EMAIL_ADDRESS=test@example.com


# =========================
# AWS / S3 Storage
# (only needed if you actually use S3)
# =========================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name


# =========================
# Redis / Celery
# base.py prefers REDIS_URL, falls back to REDISCLOUD_URL, then localhost
# =========================
# Generic Redis URL (common on many platforms)
REDIS_URL=redis://:password@localhost:6379/0

# For RedisCloud-style providers (if used)
REDISCLOUD_URL=redis://:password@localhost:6379/0

# In base.py this is parsed with .lower() == "true"
# test.py overrides this to True for tests
CELERY_TASK_ALWAYS_EAGER=False


# =========================
# Seed / Management Command Users
# (not used in settings; for your own scripts/fixtures)
# =========================

# Django superuser to create via a custom management command or script
DJANGO_SU_NAME=admin
DJANGO_SU_EMAIL=admin@example.com
DJANGO_SU_PASSWORD=change-me-admin-password

# Default demo/user seed
DJANGO_USER_NAME=demo_user
DJANGO_USER_EMAIL=demo@example.com
DJANGO_USER_PASSWORD=change-me-demo-password
DJANGO_USER_ACCEPTED=True
DJANGO_USER_IS_STAFF=False
